<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_edit_text_items">


    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvPriceName"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:text="Item  Name"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tvPriceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/itemName"
                android:layout_alignStart="@+id/itemName"
                android:layout_centerVertical="true"
                android:text="Price" />

            <TextView
                android:id="@+id/tvQntyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvPriceName"
                android:layout_alignStart="@+id/tvPriceName"
                android:layout_below="@+id/tvPriceName"
                android:text="Quantity" />

            <TextView
                android:id="@+id/tvAmountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvQntyName"
                android:layout_alignStart="@+id/tvQntyName"
                android:layout_below="@+id/tvQntyName"
                android:text="Amount" />

            <TextView
                android:id="@+id/tvPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/tvAmountName"
                android:layout_toRightOf="@+id/tvAmountName"
            android:text="" />

            <TextView
                android:id="@+id/tvQntyValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tvAmountName"
                android:layout_alignLeft="@+id/tvPriceValue"
                android:layout_alignStart="@+id/tvPriceValue"
                android:text=""/>

            <TextView
                android:id="@+id/tvAmountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvQntyValue"
                android:layout_alignStart="@+id/tvQntyValue"
                android:layout_below="@+id/tvQntyValue"
                android:text="" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent" android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="3">


        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+" />
        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="-" />
    </LinearLayout>



</LinearLayout>